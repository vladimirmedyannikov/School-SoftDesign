<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softdesign.school" >

    <application
        android:name=".ui.activities.ActiveAndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <meta-data android:name="AA_DB_NAME" android:value="SchoolDatabase.db"/>
        <meta-data android:name="AA_DB_VERSION" android:value="1"/>

        <meta-data android:name="AA_MODELS" android:value="com.softdesign.school.data.storage.models.ActiveUser, com.softdesign.school.data.storage.models.Team"/>
        <activity android:name=".ui.activities.MainActivity"/>
        <activity
            android:name=".ui.activities.ActiveAndroidActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
